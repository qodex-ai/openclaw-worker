#===============================================================================
# OpenClaw Configuration
# 
# 1. Copy this file:    cp terraform.tfvars.example terraform.tfvars
# 2. Edit the values:   nano terraform.tfvars
# 3. Get your IP:       curl ifconfig.me
#===============================================================================

aws_region    = "us-east-1"
instance_type = "t3.medium"   # ~$30/month (4GB RAM)

# YOUR IP ADDRESS - REQUIRED
# Get it by running: curl ifconfig.me
# Format must include /32 at the end
my_ip_cidrs = ["YOUR_IP_HERE/32"]

# ANTHROPIC API KEY - REQUIRED
# Get from: https://console.anthropic.com/
anthropic_api_key = "sk-ant-YOUR-KEY-HERE"

# DOMAIN NAME - REQUIRED
# Must be a domain you own (e.g., openclaw.example.com)
# DNS will be configured automatically via Route53
domain_name = "openclaw.example.com"

# EMAIL - REQUIRED
# Used for Let's Encrypt SSL certificate notifications
email = "your-email@example.com"

# ROUTE53 HOSTED ZONE ID - OPTIONAL
# If not provided, will be looked up automatically from domain name
# Get from AWS Console: Route53 â†’ Hosted Zones
# route53_zone_id = "Z1234567890ABC"
